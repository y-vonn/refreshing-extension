{
  "author": "Yifan Zou",
  "name": "refresh to show traffic card",
  "version": "1.0",
  "manifest_version": 3,
  "description": "An extension to keep reloading page until traffic card is shown.",
  "devtools_page": "index.html",
  "background": { "service_worker": "background.js" },

  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://*/*"],

  "icons": {
    "16": "icons/lulu_icon.png",
    "32": "icons/lulu_icon.png",
    "48": "icons/lulu_icon.png",
    "128": "icons/lulu_icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/lulu_icon.png",
      "32": "icons/lulu_icon.png",
      "48": "icons/lulu_icon.png",
      "128": "icons/lulu_icon.png"
    }
  }
}
